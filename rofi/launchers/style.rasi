
                     // Configuration.
configuration {
	modi:                       "drun";
    show-icons:                 true;
    display-drun:               "ó±“ž  Apps";
    font:                       "JetBrainsMono Nerd Font 10";
    icon-theme:                 "Papirus-Dark";
    monitor: -1;
}

// Globals.
//@import "~/.config/rofi/themes/nord.rasi"
@import "~/.config/rofi/themes/tokyonight.rasi"

// Main window.
window {
    transparency:                "real";
    location:                    southwest;
    anchor:                      southwest;
    fullscreen:                  false;
    width:                       475px;
    x-offset:                    6px;
    y-offset:                    -30px;
    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               10px;
    border-color:                @border;
    background-color:            #00000055;
    // transparent ; 
    //@background;
    cursor:                      "default";
}

// Main box.
mainbox {
    enabled:                     true;
    spacing:                     0px;
    margin:                      0px;
    padding:                     10px;
    border:                      0px solid;
    border-radius:               10px;
    border-color:                @border;
    background-color:            #00000088;
    children:                    [ "inputbar", "listview" ];
}

// Bar where search field is.
inputbar {
    enabled:                     false;
    spacing:                     20px;
    margin:                      0px;
    padding:                     0px 0px 20px 0px;
    border:                      0px solid;
    border-radius:               10px;
    border-color:                @selected;
    background-color:            @background-alt;
    text-color:                  @foreground;
    children:                    [ "prompt", "entry" ];
}

// Icon area.
prompt {
    enabled:                     true;
    background-color:            @blue2;
    text-color:                  @background;
    border:                      0px;
    border-color:                @blue2;
    border-radius:               10px;
    padding:                     10px 20px;
}

// Search field.
entry {
    enabled:                     true;
    background-color:            inherit;
    text-color:                  inherit;
    padding:                     10px 0px 0px 0px;
    cursor:                      text;
    placeholder:                 "Search...";
    placeholder-color:           @gray4;
}

// Area where all of the results are displayed.
listview {
    enabled:                     true;
    columns:                     10;
    lines:                       7;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    spacing:                     5px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      "default";
}

// Items in the list.
element {
    enabled:                     true;
    spacing:                     15px;
    margin:                      0px;
    padding:                     5px;
    border:                      0px;
    border-radius:               10px;
    border-color:                @selected;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      pointer;
    orientation:                 horizontal;
}
element normal.normal {
    background-color:           transparent; 
   // @background;
    text-color:                  @foreground;
}
element alternate.normal {
    background-color:            transparent ; 
    //@background;
    text-color:                  @foreground;
}
element selected.normal {
    background-color:            @selected;
    text-color:                  @background;
}
element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        30px;
    cursor:                      inherit;
}
element-text {
    enabled:                      false;
    background-color:            transparent;
    text-color:                  inherit;
    highlight:                   inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

// The error message.
error-message {
    padding:                     20px;
    border:                      2px solid;
    border-radius:               10px;
    border-color:                @urgent;
    background-color:            @background;
    text-color:                  @foreground;
}
textbox {
    background-color:            @background;
    text-color:                  @foreground;
    vertical-align:              0.5;
    horizontal-align:            00;
    highlight:                   none;
}
